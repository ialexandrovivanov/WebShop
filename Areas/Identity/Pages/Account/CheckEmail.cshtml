@page
@{ 
    Layout = "_Layout_black"; 
}
@model CheckEmailModel
@{
    ViewData["Title"] = "Check email";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script type="text/javascript">
    $(window).on('load', function () {
        $('#modal').modal('show');
    });
</script>
<body>
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="addContactLabel"
         aria-hidden="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="padding:50px; background-color:ivory;
             color:white; margin-top:100px; border-radius:8px;">
                <div class="modal-body">
                    <p class="container-fluid text-center" style="color:black">
                        <strong>You have a new email!</strong> Click on the link to verify your email validity
                        If you are not able to find our email check in the <strong>spam folder!</strong>
                        
                    </p>
                    <div class="container-fluid justify-content-center text-center" style="margin-top:40px">
                        <a class="btn btn-secondary" onClick="location.href='/'">
                            Go to home page
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
